generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  cedula         String          @unique
  password       String
  name           String
  userTypeId     String
  userStatusId   String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  userType       UserType        @relation(fields: [userTypeId], references: [id])
  userStatus     UserStatus      @relation(fields: [userStatusId], references: [id])
  sessions       Session[]
  temporaryTokens TemporaryToken[]
}

model UserType {
  id    String  @id @default(uuid())
  name  String  @unique
  users User[]
}

model UserStatus {
  id    String  @id @default(uuid())
  name  String  @unique
  users User[]
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  user      User     @relation(fields: [userId], references: [id])
}

model TemporaryToken {
  id        String     @id @default(uuid())
  userId    String
  token     String     @unique
  type      TokenType
  expiresAt DateTime
  createdAt DateTime   @default(now())

  user      User       @relation(fields: [userId], references: [id])
}

enum TokenType {
  PASSWORD_RESET
  EMAIL_VERIFICATION
  TWO_FACTOR
}
